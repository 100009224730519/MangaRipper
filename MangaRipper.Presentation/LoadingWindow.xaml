<Window x:Class="MangaRipper.Presentation.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MangaRipper.Presentation"
        mc:Ignorable="d"
        Title="LoadingWindow" Height="178" Width="400" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True" WindowStyle="None">
    <Grid>
        <Label x:Name="label" Content="MangaRipper" FontSize="55" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontFamily="Copperplate Gothic Light" FontWeight="Normal"/>
        <Label x:Name="label_Copy" Content="LOADING..." HorizontalAlignment="Left" Margin="10,140,0,0" VerticalAlignment="Top"/>
        <ProgressBar HorizontalAlignment="Center" Height="7" VerticalAlignment="Bottom" Width="400" IsIndeterminate="True" Value="1"/>

    </Grid>
</Window>
